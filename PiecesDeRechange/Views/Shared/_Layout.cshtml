<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Entreprise A&M", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.Resources.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(Resources.Resources.About, "About", "Home")</li>
                    <li>@Html.ActionLink(Resources.Resources.Contact, "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

            <div class="btn-group">
                <button type="button" class="btn btn-default">Administration</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Resources.Resources.ActivateEmployee, "AddEmployee", "Admin")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddMachine, "AddMachine", "Admin")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddParts, "AddParts", "Admin")</li>
                </ul>
            </div> 

            <div class="btn-group">
                <button type="button" class="btn btn-default">Operateur</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Resources.Resources.ActivateEmployee, "AddEmployee", "Admin")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddMachine, "AddMachine", "Admin")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddParts, "AddParts", "Admin")</li>
                </ul>
            </div> 

            <div class="btn-group">
                <button type="button" class="btn btn-default">Gestionnaire</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Resources.Resources.ActivateEmployee, "", "Gestionnaire")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddMachine, "AddMachine", "Gestionnaire")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddParts, "AddParts", "Gestionnaire")</li>
                </ul>
            </div> 
            <div class="btn-group">
                <button type="button" class="btn btn-default">Ingenieur</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Resources.Resources.AddParts, "AddParts", "Ingenieur")</li>
                    <li>@Html.ActionLink(Resources.Resources.AddMachine, "AddMachine", "Ingenieur")</li>
                    <li>@Html.ActionLink(Resources.Resources.CreateDemande, "CreateDemande", "Ingenieur")</li>
                </ul>
            </div> 
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Entreprise A&M</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
